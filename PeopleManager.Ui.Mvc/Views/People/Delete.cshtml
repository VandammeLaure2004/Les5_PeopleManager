@model Person
@{
	ViewBag.Title = "Delete Person";
}

<h1>@ViewBag.Title</h1>
@*Dit kan je naast method zetten maar dan moet je de route in je peopleController wel aanpassen.*@
@*asp-action="DeleteConfirmed" asp-route-id="@Model.Id"*@
<form method="post">
	<p>Are you sure you want to delete @Model.FirstName @Model.LastName (@Model.Email)?</p>
	<a asp-action="Index" class="btn btn-light">No</a>
	<button type="submit" class="btn btn-danger">YES</button>
</form>